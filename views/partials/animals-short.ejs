<div class="animals">
    <% if (locals.animals) { %>
        <% animals.forEach(animal => { %>
            <div class="info-short">
                <h3><%= animal.name %></h3>
                <img class="small-animal-img" src=<%= `images/${animal.name}.png` %> height="100px" width="100px" alt=<%= `image of ${animal.name}` %> > </img>
                <p><span>Food:</span> <%= animal.food %></p>
                <p><span>Location:</span> <%= animal.location %></p>
                <a class="read-more-btn" href= <%=`/${animal.group}/${animal.name}`%>>Read more</a>
            </div>
       <%  }) %>
    <% } %>
</div>